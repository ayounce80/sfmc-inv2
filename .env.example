# SFMC Inventory Tool Configuration
# Copy this file to .env and fill in your values

# Required: Your SFMC subdomain (e.g., mc1abc2def)
SFMC_SUBDOMAIN=

# Required: OAuth2 credentials from Installed Package (Server-to-Server)
SFMC_CLIENT_ID=
SFMC_CLIENT_SECRET=

# Optional: Business Unit MID for Enterprise 2.0 accounts
# If set, tokens and operations will be scoped to this BU
SFMC_ACCOUNT_ID=

# Optional: Enable debug logging for SOAP requests
# SFMC_SOAP_DEBUG=true

# Optional: Enable debug logging for REST requests
# SFMC_REST_DEBUG=true
